<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="@color/jainkosh_orange"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:navigationIcon="@drawable/jainkosh"
        app:titleTextColor="@color/white"
        app:title=""
        app:subtitleTextColor="@color/white">

        <!-- Horizontal progress bar inside toolbar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="120dp"
            android:layout_height="6dp"
            android:layout_gravity="end|center"
            android:indeterminate="false"
            android:max="100"
            android:visibility="gone" />
    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:id="@+id/quickNavRow"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:visibility="gone"
        android:layout_marginTop="56dp"
        android:background="@color/jainkosh_orange">

        <!-- quick-nav buttons (unchanged) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/quick_videos"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Videos"
            android:textColor="@color/white"
            android:icon="@drawable/ic_video"
            app:iconGravity="textStart"
            android:textSize="14sp"
            android:padding="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quick_audio"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audio"
            android:textColor="@color/white"
            android:icon="@drawable/ic_audio"
            app:iconGravity="textStart"
            android:textSize="14sp"
            android:padding="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quick_literature"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Literature"
            android:textColor="@color/white"
            android:icon="@drawable/ic_book"
            app:iconGravity="textStart"
            android:textSize="14sp"
            android:padding="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quick_notes"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textColor="@color/white"
            android:icon="@drawable/ic_notes"
            app:iconGravity="textStart"
            android:textSize="14sp"
            android:padding="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quick_online"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online"
            android:textColor="@color/white"
            android:icon="@drawable/ic_onlineclass"
            app:iconGravity="textStart"
            android:textSize="14sp"
            android:padding="6dp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="104dp">

        <ScrollView
            android:id="@+id/buttonsScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/buttonsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="48dp"
                android:paddingBottom="48dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVideos"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="12dp"
                    android:text="ðŸŽ¥  Videos"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:backgroundTint="@color/jainkosh_orange"
                    android:contentDescription="Videos" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAudio"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="12dp"
                    android:text="ðŸŽ§  Audio"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:backgroundTint="@color/jainkosh_orange"
                    android:contentDescription="Audio" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLiterature"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="12dp"
                    android:text="ðŸ“–  Literature"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:backgroundTint="@color/jainkosh_orange"
                    android:contentDescription="Literature" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStudy"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="12dp"
                    android:text="ðŸ“š  Study Material"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:backgroundTint="@color/jainkosh_orange"
                    android:contentDescription="Study Material" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOnlineClass"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="12dp"
                    android:text="ðŸ§˜  Online Class"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:backgroundTint="@color/jainkosh_orange"
                    android:contentDescription="Online Class" />

                <TextView
                    android:id="@+id/footerDirected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:text="Directed by Vikas Chhabra (Jain), Indore"
                    android:textAlignment="center"
                    android:textColor="@color/jainkosh_orange"
                    android:textSize="14sp"/>
            </LinearLayout>
        </ScrollView>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:clickable="false">

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
